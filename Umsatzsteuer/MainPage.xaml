<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Umsatzsteuer.MainPage">

    <StackLayout Padding="20">
        <!-- Eingabemaske -->
        <Entry x:Name="AmountEntry" Placeholder="Betrag eingeben" Keyboard="Numeric"/>

        <Picker x:Name="TypePicker" Title="Brutto oder Netto">
            <Picker.Items>
                <x:String>Brutto</x:String>
                <x:String>Netto</x:String>
            </Picker.Items>
        </Picker>

        <Entry x:Name="TaxRateEntry" Placeholder="Umsatzsteuer in %" Keyboard="Numeric"/>

        <Button Text="Berechnen" Clicked="OnCalculateClicked"/>

        <!-- Ergebnisanzeige -->
        <StackLayout x:Name="ResultStack" IsVisible="False">
            <Label x:Name="InputAmountLabel"/>
            <Label x:Name="TaxRateLabel"/>
            <Label x:Name="ResultLabel"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
